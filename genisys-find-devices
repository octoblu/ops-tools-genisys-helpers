  local meshblu_json_path="$1"
  local room_uuid="$2"

  local skype_uuid="$(find_skype_uuid "$meshblu_json_path" "$room_uuid")"
  local exit_code=$?
  if [ "$exit_code" != 0 ]; then
    return $exit_code
  fi

  mkdir -p skype \
  && meshblu-util generate-token --uuid "$skype_uuid" "$meshblu_json_path" > skype/meshblu.json
}

find_skype_uuid() {
  local meshblu_json_path="$1"
  local room_uuid="$2"

  meshblu-util get --uuid "$room_uuid" "$meshblu_json_path" \
  | jq --raw-output '.genisys.devices.skype.uuid'
}

find_endo_exchange() {
  local meshblu_json_path="$1"
  local room_uuid="$2"

  local endo_exchange_uuid="$(find_endo_exchange_uuid "$meshblu_json_path" "$room_uuid")"
  local exit_code=$?
  if [ "$exit_code" != 0 ]; then
    return $exit_code
  fi

  mkdir -p endo-exchange \
  && meshblu-util generate-token --uuid "$endo_exchange_uuid" "$meshblu_json_path" > endo-exchange/meshblu.json
}

find_endo_exchange_uuid() {
  local meshblu_json_path="$1"
  local room_uuid="$2"

  meshblu-util get --uuid "$room_uuid" "$meshblu_json_path" \
  | jq --raw-output '.genisys.devices.endoExchange.uuid'
}

find_slurry_exchange() {
  local meshblu_json_path="$1"
  local room_uuid="$2"

  local slurry_exchange_uuid="$(find_slurry_exchange_uuid "$meshblu_json_path" "$room_uuid")"
  local exit_code=$?
  if [ "$exit_code" != 0 ]; then
    return $exit_code
  fi

  mkdir -p slurry-exchange \
  && meshblu-util generate-token --uuid "$slurry_exchange_uuid" "$meshblu_json_path" > slurry-exchange/meshblu.json
}

find_slurry_exchange_uuid() {
  local meshblu_json_path="$1"
  local room_uuid="$2"

  meshblu-util get --uuid "$room_uuid" "$meshblu_json_path" \
  | jq --raw-output '.genisys.devices.slurryExchange.uuid'
}

find_exchange_sync() {
  local meshblu_json_path="$1"
  local room_uuid="$2"

  local exchange_sync_uuid="$(find_exchange_sync_uuid "$meshblu_json_path" "$room_uuid")"
  local exit_code=$?
  if [ "$exit_code" != 0 ]; then
    return $exit_code
  fi

  mkdir -p exchange-sync \
  && meshblu-util generate-token --uuid "$exchange_sync_uuid" "$meshblu_json_path" > exchange-sync/meshblu.json
}

find_exchange_sync_uuid() {
  local meshblu_json_path="$1"
  local room_uuid="$2"

  meshblu-util get --uuid "$room_uuid" "$meshblu_json_path" \
  | jq --raw-output '.genisys.devices.exchangeSync.uuid'
}

find_activities_device() {
  local meshblu_json_path="$1"
  local room_uuid="$2"

  local activities_device_uuid="$(find_activities_device_uuid "$meshblu_json_path" "$room_uuid")"
  local exit_code=$?
  if [ "$exit_code" != 0 ]; then
    return $exit_code
  fi

  mkdir -p activities-device \
  && meshblu-util generate-token --uuid "$activities_device_uuid" "$meshblu_json_path" > activities-device/meshblu.json
}

find_activities_device_uuid() {
  local meshblu_json_path="$1"
  local room_uuid="$2"

  meshblu-util get --uuid "$room_uuid" "$meshblu_json_path" \
  | jq --raw-output '.genisys.devices.activities.uuid'
}
main() {
  # Define args up here
  local meshblu_json_path
  local room_uuid

  while [ "$1" != "" ]; do
    local param="$1"
    local value="$2"
    case "$param" in
      -h | --help)
        usage
        exit 0
        ;;
      -v | --version)
        version
        exit 0
        ;;
      # Arg with value
      # -x | --example)
      #   example="$value"
      #   shift
      #   ;;
      # Arg without value
      # -e | --example-flag)
      #   example_flag='true'
      #   ;;
      *)
        if [ "${param::1}" == '-' ]; then
          echo "ERROR: unknown parameter \"$param\""
          usage
          exit 1
        fi
        # Set main arguments
        if [ -z "$meshblu_json_path" ]; then
          meshblu_json_path="$param"
        elif [ -z "$room_uuid"]; then
          room_uuid="$param"
        fi
        ;;
    esac
    shift
  done

  assert_required_params "$meshblu_json_path" "$room_uuid"
  assert_customer_json "$meshblu_json_path"
  assert_room_uuid "$meshblu_json_path" "$room_uuid"

  find_hue_button "$meshblu_json_path" "$room_uuid" \
  && echo 'found hue button' \
  && find_hue_light "$meshblu_json_path" "$room_uuid" \
  && echo 'found hue light' \
  && find_skype "$meshblu_json_path" "$room_uuid" \
  && echo 'found skype' \
  && find_endo_exchange "$meshblu_json_path" "$room_uuid" \
  && echo 'found endo exchange' \
  && find_slurry_exchange "$meshblu_json_path" "$room_uuid" \
  && echo 'found slurry exchange' \
  && find_exchange_sync "$meshblu_json_path" "$room_uuid" \
  && echo 'found exchange sync' \
  && find_activities_device "$meshblu_json_path" "$room_uuid" \
  && echo 'found activities device'

  exit $?
}

main "$@"
